<form-validation>
	
	<global>

        <constant>
            <constant-name>numeros</constant-name>
            <constant-value>^\d{5}$</constant-value>
        </constant>

        <constant>
            <constant-name>masc-valor-monetario</constant-name>
            <constant-value>^\d{1,4}(,\d{2})?$</constant-value>
        </constant>

        <constant>
            <constant-name>masc-data</constant-name>
            <constant-value>^\d{2}\/\d{2}\/\d{4}$</constant-value>
        </constant>

    </global>

