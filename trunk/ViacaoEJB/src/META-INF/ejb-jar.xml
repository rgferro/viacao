<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC
	"-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
	"http://java.sun.com/dtd/ejb-jar_2_0.dtd">
<ejb-jar>
	<enterprise-beans>
		<session>
			<ejb-name>Processo</ejb-name>
			<home>com.viacao.interfaces.ProcessoHome</home>
			<remote>com.viacao.interfaces.Processo</remote>
			<ejb-class>com.viacao.ejb.ProcessoBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
			<resource-ref>
				<description>DataSouce padrao</description>
				<res-ref-name>jdbc/EstagioDS</res-ref-name>
				<res-type>javax.sql.DataSource</res-type>
				<res-auth>Container</res-auth>
			</resource-ref>
		</session>
	</enterprise-beans>
	
	<assembly-descriptor>
		<container-transaction>
			<method>
				<ejb-name>Processo</ejb-name>
				<method-name>*</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
	</assembly-descriptor>
</ejb-jar>
